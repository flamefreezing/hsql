<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.freezing.naive.repository.UserRepository">

    <select id="findByEmail" resultType="org.freezing.naive.security.User">
        SELECT * FROM USERS u WHERE u.email = #{email}
    </select>

    <insert id="save" parameterType="org.freezing.naive.security.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users(email, password, created_at)
        VALUES(#{email}, #{password}, CURRENT_TIMESTAMP)
    </insert>
</mapper>